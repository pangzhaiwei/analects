<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_recycler_view_reply_postinfo"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:background="#dedbdb"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="我"
            android:textStyle="bold"
            android:id="@+id/tv_post_info_item_reply_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="你"
            android:textStyle="bold"
            android:id="@+id/tv_post_info_item_reply_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试评论"
            android:id="@+id/tv_post_info_reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="20180407"
            android:id="@+id/tv_post_info_reply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>